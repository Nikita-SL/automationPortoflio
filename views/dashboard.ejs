<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Dashboard</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body class="container py-5">
  <h2>Welcome, <%= username %>!</h2>
  <form method="POST" action="/logout" class="mb-3">
    <button data-cy="logout" type="submit" class="btn btn-danger">Logout</button>
  </form>
  <h4>Your Notes</h4>
  <ul class="list-group mb-3">
    <% if (notes.length === 0) { %>
      <li class="list-group-item">No notes yet.</li>
    <% } %>
    <% notes.forEach(function(note) { %>
      <li class="list-group-item" data-cy="note"><%= note.content %></li>
    <% }); %>
  </ul>
  <a href="/notes/new" data-cy="new-note" class="btn btn-primary">Add Note</a>
</body>
</html> 